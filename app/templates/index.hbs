{{header-menu 
  forecast=model.weather.forecast 
  current_temp=model.weather.current_temp 
  heat_alert=model.weather.heat_alert
  splash=true}}
  
<div class="ui vertical masthead center aligned segment">
  {{#splash-weather heat_alert=model.weather.heat_alert}}
    <div class="ui equal width center aligned padded grid splash-grid">
      <div class="row">
        <div class="column">
          
        </div>
      </div>
      <div class="row">
        <div class="column">
          <img src="KeepCool-Splash-Logo-Vertical.png" class="ui centered image splash-logo">
          <p class="tagline">Find local places to keep cool this summer</p>
        </div>
      </div>
      <div class="row">
        <div class="column">
          <div class="ui container" style="position:relative;">
            <div class="ui two column very relaxed stackable grid">
              {{#unless geolocation.disabled}}
                <div class="column">
                  {{#link-to 'places.nearby' class="ui fluid button find-places-button"}}
                    <i class="location arrow icon"></i>
                    FIND COOL PLACES
                  {{/link-to}}
                </div>
                <div class="ui vertical inverted divider">OR</div>
              {{/unless}}
              <div class="center aligned column">
                {{#ui-dropdown class="inverted fluid large selection" onChange=(action 'toTown')}}
                  <div class="default text">Select an area</div>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                  {{#each model.towns as |town|}}
                    <div class="item" data-id="{{town.name}}">
                      {{town.name}}
                    </div>
                  {{/each}}
                  </div>
                {{/ui-dropdown}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/splash-weather}}
</div>
<div class="ui container">
  <h2>Why is it so hot?</h2>
  <p>
    Why does it seem to be getting hotter? Learn the science behind the hot weather.
  </p>
  <div style="text-align: center;">
    {{#link-to 'info.why-is-it-so-hot' class="ui red basic button"}}
      Learn more
    {{/link-to}}
  </div>
</div>

<div class="ui container" style="margin-bottom: 85px;">
  <h2>Stay safe in the high heat!</h2>
  <p>
    Learn the signs and symptoms of heatstroke, and know how to best prepare for extremely hot days.
  </p>
  <div style="text-align: center;">
    {{#link-to 'info.heat-safety' class="ui primary basic button"}}
      Stay safe
    {{/link-to}}
  </div>
</div>

