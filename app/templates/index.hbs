<div class="ui inverted vertical masthead center aligned segment">
  <div class="ui container splash-portal">
    <h1>Keep Cool</h1>
    <p>Find local places to keep cool this summer</p>
    {{#if geolocation.disabled}}
    {{else}}
      {{#link-to 'places.nearby' class="ui fluid button"}}
        <i class="location arrow icon"></i>
        Find places near me
      {{/link-to}}
    {{/if}}
    <div class="ui horizontal inverted divider">OR</div>
    {{#ui-dropdown class="inverted fluid large selection" onChange=(action 'toTown')}}
      <div class="default text">Select an area</div>
      <i class="dropdown icon"></i>
      <div class="menu">
      {{#each model as |town|}}
        <div class="item" data-id="{{town.name}}">
          {{town.name}}
        </div>
      {{/each}}
      </div>
    {{/ui-dropdown}}
  </div>
</div>
<div class="ui center aligned vertical-segment">
  <div class="ui container">
    <h1>Why so hot?</h1>
  </div>
</div>
